{
	"name": "@m/server",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"clean/deps": "rm -rf node_modules",
		"dev": "concurrently \"pnpm run functions\" \"pnpm run stripe-webhook\"",
		"format/check": "deno fmt --check --config supabase/functions/deno.json",
		"format/fix": "deno fmt --config supabase/functions/deno.json",
		"functions": "supabase functions serve",
		"info": "supabase status",
		"lint/check": "eslint supabase/functions",
		"lint/fix": "eslint supabase/functions --fix",
		"lint/types": "deno check --quiet --config supabase/functions/deno.json supabase/functions",
		"start": "supabase start",
		"stop": "supabase stop",
		"stripe-webhook": "stripe listen --forward-to http://localhost:54321/functions/v1/stripe-webhook --events checkout.session.completed,customer.subscription.created,customer.subscription.updated,customer.subscription.deleted,invoice.paid,invoice.payment_failed,product.updated,price.updated,customer.created,customer.updated"
	},
	"packageManager": "pnpm@10.19.0",
	"devDependencies": {
		"concurrently": "^9.2.1",
		"deno": "^2.4.3"
	}
}
