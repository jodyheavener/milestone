{
	"extends": "../../tsconfig.json",
	"include": [
		"./app/**/*",
		"./api/**/*",
		"./.react-router/types/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"references": [
		{
			"path": "../shared"
		}
	],
	"compilerOptions": {
		"composite": true,
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"types": [
			"node",
			"vite/client",
			"vite-plugin-svgr/client"
		],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [
			".",
			"./.react-router/types"
		],
		"tsBuildInfoFile": "./tsconfig.tsbuildinfo",
		"paths": {
			"~/*": [
				"./app/*"
			]
		}
	}
}
