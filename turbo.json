{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "build/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint/check": {
			"dependsOn": ["^build"]
		},
		"lint/fix": {
			"cache": false
		},
		"lint/types": {
			"dependsOn": ["^build"]
		},
		"format/check": {
			"cache": false
		},
		"format/fix": {
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
